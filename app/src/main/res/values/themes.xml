<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotedApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColorDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColorDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnBackground">@color/darkGrey</item>
        <item name="colorTertiary">@color/white</item>
        <item name="colorAccent">@color/lightGrey</item>
        <item name="fontFamily">@font/nunito_sans</item>
    </style>

    <style name="Theme.NotedApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NotedApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NotedApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:actionMenuTextColor">@color/black</item>
    </style>

    <style name="Theme.NotedApp.SpinnerItemTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">?colorOnBackground</item>
    </style>

</resources>